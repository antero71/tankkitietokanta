<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>TankkiServlet</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.TankkiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EtusivuServlet</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.EtusivuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValmistajaServlet</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.ValmistajaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MuokkaaValmistajaa</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.MuokkaaValmistajaa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValmistajaPoistaServlet</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.ValmistajaPoistaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TankinHaku</servlet-name>
        <servlet-class>com.antero.tankkitietokanta.servlet.TankinHaku</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TankkiServlet</servlet-name>
        <url-pattern>/TankkiServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EtusivuServlet</servlet-name>
        <url-pattern>/etusivu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValmistajaServlet</servlet-name>
        <url-pattern>/Valmistaja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MuokkaaValmistajaa</servlet-name>
        <url-pattern>/MuokkaaValmistajaa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValmistajaPoistaServlet</servlet-name>
        <url-pattern>/PoistaValmistaja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TankinHaku</servlet-name>
        <url-pattern>/TankinHaku</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
